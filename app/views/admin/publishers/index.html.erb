<% provide :title, t("publisher_list") %>
<h1><%= t "publisher_list" %></h1>
<%= form_tag admin_publishers_path, method: :get do %>
  <%= text_field_tag :search, params[:search], placeholder: t("search"),
    class: "form-control search-field", autofocus: true %>
<% end %>
<%= button_to t("add_publisher"), new_admin_publisher_path, method: :get,
  class: "btn btn-success" %>
<%= link_to t("excel"), params.except(:host, :port, :protocol).permit!.
  merge(format: "xlsx") %>
<div class="table-responsive">
  <table class="table">
    <thead>
      <tr>
        <th><%= t "index" %></th>
        <th><%= t "publisher_name" %></th>
        <th><%= t "address" %></th>
        <th><%= t "email" %>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <%= render @publishers %>
    </tbody>
  </table>
  </div>

<%= will_paginate %>
