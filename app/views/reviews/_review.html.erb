<section class="comment-list">
  <article class="row">
    <div class="col-md-2 col-sm-2 hidden-xs">
      <figure class="thumbnail">
        <img class="img-responsive" src=<%= Settings.user.default_avatar %> />
        <figcaption class="text-center">
          <%= link_to review.user.name, user_path(review.user) %>
        </figcaption>
      </figure>
    </div>
    <div class="col-md-10 col-sm-10">
      <div class="panel panel-default arrow left">
        <div class="panel-body">
          <header class="text-left">
              <span class="rate-count">
                <% review.rate.times do %>
                  <i class="fa fa-star" aria-hidden="true"></i>
                <% end %>
              </span>
              <br>
            <time class="comment-date"><i class="fa fa-clock-o"></i>
              <%= l review.created_at, format: :request_date %>
            </time>
          </header>
          <div class="comment-post">
            <p>
              <%= review.content %>
            </p>
            <%= link_to t("load_more"), review_path(review) %>
          </div>
        </div>
      </div>
    </div>
  </article>
</section>
